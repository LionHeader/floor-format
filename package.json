{
  "name": "floor-format",
  "version": "1.0.3",
  "description": "Format the floating-point number to the specified number of digits, and truncate the extra 0 at the end of the floating-point number.",
  "main": "./dist/floor-format.min.js",
  "scripts": {
    "build": "webpack --config ./webpack.config.js --progress --inline --colors",
    "test": "mocha --bail --recursive --require @babel/register test/*spec.js",
    "test:watch": "mocha --watch --recursive --require @babel/register test/*spec.js",
    "export": "mocha --recursive --require @babel/register test/*spec.js -R markdown > test/UNIT.md",
    "test:coverage": "cross-env NODE_ENV=test nyc mocha"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/register": "^7.10.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0",
    "uglifyjs-webpack-plugin": "^2.2.0"
  },
  "keywords": [
    "decimal",
    "floor"
  ],
  "author": "xianchao.he",
  "license": "MIT",
  "dependencies": {
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "respository": {
    "type": "git",
    "url": "https://github.com/LionHeader/floor-format.git"
  },
  "type": "module",
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "report-dir": "./test",
    "sourceMap": false,
    "instrument": false
  }
}
